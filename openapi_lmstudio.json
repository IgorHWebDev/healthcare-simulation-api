{
  "openapi": "3.1.0",
  "info": {
    "title": "Healthcare Analysis Hub",
    "description": "Combined healthcare analysis service with local LM Studio model and Render API integration",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://10.100.102.100",
      "description": "Healthcare Analysis Hub"
    }
  ],
  "paths": {
    "/v1/chat/completions": {
      "post": {
        "summary": "Local Medical Analysis",
        "description": "Get detailed analysis using local medical model",
        "operationId": "analyzeLocal",
        "tags": ["Analysis"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AnalysisRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful analysis",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AnalysisResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/simulate": {
      "post": {
        "summary": "Emergency Response Simulation",
        "description": "Forward request to Render API for initial emergency response",
        "operationId": "simulateEmergency",
        "tags": ["Emergency"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmergencyRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful emergency response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmergencyResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/analyze": {
      "post": {
        "summary": "Combined Analysis",
        "description": "Get both initial emergency response and detailed analysis",
        "operationId": "analyzeCombined",
        "tags": ["Combined"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CombinedRequest"
              },
              "examples": {
                "emergency-case": {
                  "value": {
                    "scenario": "45-year-old male with chest pain radiating to left arm, shortness of breath",
                    "render_api_key": "your-render-api-key",
                    "detailed_analysis": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Combined analysis response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CombinedResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AnalysisRequest": {
        "type": "object",
        "required": ["model", "messages"],
        "properties": {
          "model": {
            "type": "string",
            "enum": ["phi_lora_3b_medical_healthcaremagic_gguf"],
            "description": "The medical model to use"
          },
          "messages": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["role", "content"],
              "properties": {
                "role": {
                  "type": "string",
                  "enum": ["system", "user", "assistant"]
                },
                "content": {
                  "type": "string"
                }
              }
            },
            "minItems": 1
          }
        }
      },
      "AnalysisResponse": {
        "type": "object",
        "required": ["choices"],
        "properties": {
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["message"],
              "properties": {
                "message": {
                  "type": "object",
                  "required": ["role", "content"],
                  "properties": {
                    "role": {
                      "type": "string"
                    },
                    "content": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "EmergencyRequest": {
        "type": "object",
        "required": ["scenario"],
        "properties": {
          "scenario": {
            "type": "string",
            "description": "Description of the emergency medical scenario"
          },
          "render_api_key": {
            "type": "string",
            "description": "API key for Render service"
          }
        }
      },
      "EmergencyResponse": {
        "type": "object",
        "required": ["response", "vital_signs"],
        "properties": {
          "response": {
            "type": "string",
            "description": "Initial emergency response and treatment plan"
          },
          "vital_signs": {
            "type": "object",
            "properties": {
              "heart_rate": {
                "type": "string",
                "example": "‚ù§Ô∏è 72"
              },
              "blood_pressure": {
                "type": "string",
                "example": "‚ö° 120/80"
              },
              "temperature": {
                "type": "string",
                "example": "üå°Ô∏è 36.5"
              },
              "respiratory_rate": {
                "type": "string",
                "example": "ü´Å 16"
              }
            }
          }
        }
      },
      "CombinedRequest": {
        "type": "object",
        "required": ["scenario"],
        "properties": {
          "scenario": {
            "type": "string",
            "description": "Description of the emergency medical scenario"
          },
          "render_api_key": {
            "type": "string",
            "description": "API key for Render service"
          },
          "detailed_analysis": {
            "type": "boolean",
            "default": true,
            "description": "Whether to include detailed analysis from local model"
          }
        }
      },
      "CombinedResponse": {
        "type": "object",
        "required": ["emergency_response", "detailed_analysis"],
        "properties": {
          "emergency_response": {
            "$ref": "#/components/schemas/EmergencyResponse"
          },
          "detailed_analysis": {
            "type": "string",
            "description": "Additional insights and recommendations from local model"
          }
        }
      }
    }
  }
} 